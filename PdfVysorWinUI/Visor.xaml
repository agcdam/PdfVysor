        <ScrollViewer x:Name="ScrollerPage" 
                      HorizontalContentAlignment="Center"
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto" 
                      HorizontalSnapPointsAlignment="Center" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxZoomFactor="5" ZoomMode="Enabled" MinZoomFactor="0.20" ViewChanging="ScrollerPage_ViewChanging">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <Image x:Name="Output" 
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Center" 
                       Margin="10,10,10,15" />

            </StackPanel>

