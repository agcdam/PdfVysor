<Page
    x:Class="PdfVysor.CreaDoc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PdfVysor"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <CommandBar x:Name="Command" 
                    RelativePanel.AlignLeftWithPanel="True" 
                    RelativePanel.AlignTopWithPanel="True">
            <AppBarButton Icon="Save" 
                          Label="Guardar" 
                          IsEnabled="False"/>
            <AppBarButton Icon="Delete" 
                          IsEnabled="False" 
                          Label="Eliminar">
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical" 
                                    Spacing="20">
                            <TextBlock Text="Confirmacion"/>
                            <TextBlock Text="Vas a quitar los objetos seleccionados. ¿Desea seguir?"/>
                            <Button Content="Continuar" 
                                    Style="{StaticResource AccentButtonStyle}" 
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>
        
        
        <Grid x:Name="GridList"
              RelativePanel.AlignLeftWithPanel="True" 
              RelativePanel.Below="Command">
            <muxc:TreeView x:Name="ListMach" 
                           Margin="0,0,0,0" 
                           AllowDrop="True" 
                           MinWidth="250" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Top" 
                           SelectionMode="Multiple"/>
        </Grid>


        <ScrollViewer RelativePanel.RightOf="GridList" 
                      RelativePanel.AlignTopWith="GridList">
            <StackPanel x:Name="AddMach" 
                        Orientation="Vertical" 
                        Spacing="50" 
                        MinWidth="305" 
                        MaxWidth="400" 
                        Margin="40,0,0,0" 
                        Padding="0,0,10,0">
                <StackPanel Orientation="Vertical" 
                            Spacing="10">
                    <TextBox PlaceholderText="Nuevo grupo de tareas" 
                             MinWidth="250"/>
                    <Button Content="Añadir grupo" 
                            Style="{StaticResource AccentButtonStyle}" 
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" 
                            Spacing="10">
                    <TextBlock Text="Elige el grupo de tareas" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <ListBox HorizontalAlignment="Stretch" 
                             SelectedIndex="0" 
                             Margin="0,0,0,20" 
                             MaxHeight="150">
                        <x:String>Grupo de tareas 1</x:String>
                        <x:String>Grupo de tareas 2</x:String>
                        <x:String>Grupo de tareas 3</x:String>
                    </ListBox>

                    <StackPanel Spacing="10">
                        <TextBox PlaceholderText="Nombre tarea" />
                    </StackPanel>
                    <Pivot Title="Tipo de tarea">
                        <PivotItem Header="Dividir" Tag="dividir">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="10">
                                    <Button x:Name="OpenLocal" 
                                            Content="Seleccionar documento" 
                                            Margin="0,0,0,0" 
                                            HorizontalAlignment="Stretch"/>
                                    <TextBox x:Name="CheckUrl" 
                                             PlaceholderText="Ruta del archivo" />
                                </StackPanel>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <NumberBox x:Name="FirstPage" 
                                               Header="Primera pagina" 
                                               HorizontalAlignment="Stretch" 
                                               Grid.Column="0" 
                                               Margin="0,0,10,0" 
                                               Minimum="1" 
                                               SpinButtonPlacementMode="Inline"/>

                                    <NumberBox x:Name="LastPage" 
                                               Header="Ultima pagina" 
                                               Grid.Column="1" 
                                               Minimum="1" 
                                               SpinButtonPlacementMode="Inline"/>
                                </Grid>
                            </StackPanel>
                        </PivotItem>
                        <PivotItem Header="Unir" Tag="unir">
                            <TextBlock Text="Unir"/>
                        </PivotItem>
                    </Pivot>
                </StackPanel>
                <Button Content="Añadir tarea" Style="{StaticResource AccentButtonStyle}" 
                        Margin="0,0,0,10" 
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </ScrollViewer>
    </RelativePanel>
</Page>
